<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="buttonAction" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="backgroundColor">
        <item name="android:background">@drawable/background_selector</item>
    </style>
    <style name="PageTitleColor" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">#0A3598</item>
        <item name="android:textSize">30sp</item>
    </style>
<!--    bleu 0A3598 517CDF -->
<!--     0DAD81  , 089733 -->
    <style name="LabelColorSizeStyle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">#517CDF</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
</resources>
